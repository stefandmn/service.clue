<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="service.clue" version="1.1.13" name="Clue Service" provider-name="AMSD">
	<requires>
		<import addon="xbmc.addon" version="15.2"/>
		<import addon="xbmc.python" version="2.20.0"/>
	</requires>
	<extension point="xbmc.service" library="default.py" start="startup"/>
	<extension point="xbmc.python.script" library="default.py">
		<provides>executable</provides>
	</extension>
	<extension point="xbmc.python.module" library="lib"/>
	<extension point="xbmc.addon.metadata">
		<summary>Clue Service for MCPi</summary>
		<description lang="en">Clue Service provides core system services, libraries and common API for integration</description>
		<platform>all</platform>
		<language>en</language>
	</extension>
</addon>
