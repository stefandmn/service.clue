                        <onclick>RunScript(service.clue,window.sysaccess)</onclick>
					</item>
					<item id="3">
                        <description>System Configuration</description>
                        <label>31916</label>
                        <label2>31917</label2>
                        <property name="icon"></property>
						<onclick>ActivateWindow(busydialog)</onclick>
                        <onclick>RunScript(service.clue,window.sysconfigs)</onclick>
					</item>
					<item id="4">
