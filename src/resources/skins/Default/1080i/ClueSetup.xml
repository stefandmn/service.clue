                        <description>Tethering</description>
                        <label>31926</label>
                        <label2>31927</label2>
                        <property name="icon"></property>
						<onclick>ActivateWindow(busydialog)</onclick>
                        <onclick>noop</onclick>
					</item>
					<item id="9">
                        <description>VPN Client</description>
                        <label>31934</label>
                        <label2>31935</label2>
                        <property name="icon"></property>
						<onclick>ActivateWindow(busydialog)</onclick>
                        <onclick>noop</onclick>
					</item>
					<item id="10">
                        <description>Licenses</description>
                        <label>31928</label>
                        <label2>31929</label2>
                        <property name="icon"></property>
						<onclick>ActivateWindow(busydialog)</onclick>
                        <onclick>noop</onclick>
					</item>
					<item id="11">
                        <description>Bridge</description>
                        <label>31930</label>
                        <label2>31931</label2>
                        <property name="icon"></property>
						<onclick>ActivateWindow(busydialog)</onclick>
                        <onclick>noop</onclick>
					</item>
					<item id="12">
                        <description>Surveillance</description>
                        <label>31932</label>
                        <label2>31933</label2>
                        <property name="icon"></property>
						<onclick>ActivateWindow(busydialog)</onclick>
                       <onclick>noop</onclick>
					</item>
				</content>
			</control>
		</control>

		<!-- Reboot Flag -->
