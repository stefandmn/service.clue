<?xml version="1.0" encoding="UTF-8"?>

<window>
	<defaultcontrol always="true">1200</defaultcontrol>
	<allowoverlay>no</allowoverlay>


	<controls>
		<!--background-->
		<include>globalBackground</include>
		<!--date and time-->
		<include>dateTime</include>

		<!-- Header -->
		<control type="group" id="1100">
			<posx>58</posx>
			<posy>210</posy>
			<!--animations-->
			<include>modalDialogInOutVertical</include>
			<!--General info-->
			<control type="image">
				<posx>-58</posx>
				<posy>44</posy>
				<width>2000</width>
				<height>1-row</height>
				<texture>masks/selected.png</texture>
				<colordiffuse>ffffffff</colordiffuse>
				<aspectratio>stretch</aspectratio>
			</control>
			<!--Dialog Icon-->
			<control type="label">
				<description>Dialog logo</description>
				<posx>-57</posx>
				<posy>45</posy>
				<width>55</width>
				<height>55</height>
				<font>symbolLarge</font>
				<align>center</align>
				<label></label>
				<textcolor>selected</textcolor>
			</control>
			<control type="image">
				<posx>-1</posx>
				<posy>44</posy>
				<width>3</width>
				<height>1-row</height>
				<texture>masks/black.png</texture>
				<colordiffuse>ffffffff</colordiffuse>
				<aspectratio>stretch</aspectratio>
			</control>
			<control type="label" id="1101">
				<posx>24</posx>
				<posy>44</posy>
				<width>12-col</width>
				<font>pageTitle</font>
				<label>31901</label>
				<textcolor>black</textcolor>
				<shadowcolor>-</shadowcolor>
			</control>
			<!--overlay-->
			<control type="image">
				<posx>-48</posx>
				<posy>2-row</posy>
				<width>fullscreenWidth</width>
				<height>7-row</height>
				<texture>masks/black.png</texture>
				<colordiffuse>88ffffff</colordiffuse>
				<aspectratio>stretch</aspectratio>
			</control>
		</control>

		<!-- Main Menu -->
		<control type="group" id="1200">
			<!--animations-->
			<include>modalDialogInOutVertical</include>
			<posx>84</posx>
			<posy>260</posy>
			<width>26-col</width>
			<height>18-row</height>
			<control type="Panel" id="1201">
				<posx>0</posx>
				<posy>1-col</posy>
				<width>24-col</width>
				<height>12-col</height>
				<itemlayout width="6-col" height="2-row">
					<control type="image">
						<posx>0</posx>
						<posy>12</posy>
						<width>72</width>
						<height>72</height>
						<aspectratio scalediffuse="false">scale</aspectratio>
						<texture fallback="masks/offblack.png" diffuse="masks/circle.png" border="0">$INFO[Listitem.icon]</texture>
						<bordersize>0</bordersize>
						<colordiffuse>ccFFFFFF</colordiffuse>
					</control>
					<control type="label">
						<posx>18</posx>
						<posy>18</posy>
						<width>326</width>
						<font>symbolLarge</font>
						<textcolor>unselected</textcolor>
						<label>$INFO[listitem.property(icon)]</label>
					</control>
					<control type="label">
						<posx>85</posx>
						<posy>5</posy>
						<width>326</width>
						<font>itemTitle</font>
						<textcolor>unselected</textcolor>
						<label>$INFO[ListItem.label]</label>
					</control>
					<control type="label">
						<posx>85</posx>
						<posy>38</posy>
						<width>326</width>
						<font>smallMedium</font>
						<textcolor>unselected</textcolor>
						<label>$INFO[ListItem.label2]</label>
					</control>
				</itemlayout>
				<focusedlayout width="6-col" height="2-row">
					<control type="image">
						<posx>0</posx>
						<posy>12</posy>
						<width>72</width>
						<height>72</height>
						<aspectratio scalediffuse="false">scale</aspectratio>
						<texture fallback="masks/circle.png" diffuse="masks/circle.png" colordiffuse="FFFFFFFF" border="0">$INFO[Listitem.icon]</texture>
					</control>
					<control type="label">
						<posx>18</posx>
						<posy>18</posy>
						<width>326</width>
						<font>symbolLarge</font>
						<textcolor>selected</textcolor>
						<label>$INFO[listitem.property(icon)]</label>
					</control>
					<control type="label">
						<posx>85</posx>
						<posy>5</posy>
						<width>326</width>
						<font>itemTitle</font>
						<textcolor>selected</textcolor>
						<label>$INFO[ListItem.label]</label>
						<scroll>true</scroll>
					</control>
					<control type="label">
						<posx>85</posx>
						<posy>38</posy>
						<width>326</width>
						<font>smallMedium</font>
						<textcolor>selected</textcolor>
						<label>$INFO[ListItem.label2]</label>
					</control>
				</focusedlayout>
				<content>
					<item id="1">
                        <description>System Identity</description>
						<label>31902</label>
                        <label2>31903</label2>
                        <property name="icon"></property>
						<onclick>ActivateWindow(busydialog)</onclick>
                        <onclick>RunScript(service.clue,window.sysname)</onclick>
					</item>
					<item id="2">
						<description>System Access</description>
                        <label>31904</label>
                        <label2>31905</label2>
                        <property name="icon"></property>
